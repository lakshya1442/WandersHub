<%layout("./layouts/boilerplate")-%>

<div class="row mt-5">
   <div class="col-5 offset-3">
      <form action="/login" method="post" class="needs-validation" novalidate>
         <h3 style="text-align: center;">Login on Wonderlust</h3>
         <div class="mb-4 mt-5">
            <label for="username" class="form-label">Username</label>
            <input id="username" type="text" class="form-control" placeholder="Your Name" name="username" required>
            
         </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" type="text" class="form-control" placeholder="Your password" name="password" required>


          </div>
          <button class="btn btn-outline-dark mt-3" >
            Login
          </button>
      </form>
   </div>
</div>